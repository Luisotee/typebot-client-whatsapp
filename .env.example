# Database connection (SQLite by default)
DATABASE_URL="file:./dev.db"

# Typebot API configuration
TYPEBOT_ID=your-typebot-id
TYPEBOT_API_KEY=your-typebot-api-key
TYPEBOT_API_BASE=https://bot.yourtypebotdomain.com/api/v1

# WhatsApp Configuration
# Choose the WhatsApp mode: 'meta' for Meta Cloud API, 'baileys' for unofficial Baileys library
WHATSAPP_MODE=baileys

# Meta WhatsApp Cloud API configuration (required only when WHATSAPP_MODE=meta)
WHATSAPP_TOKEN=your-whatsapp-cloud-api-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_API_URL=https://graph.facebook.com/v22.0

# Baileys Configuration (used only when WHATSAPP_MODE=baileys)
BAILEYS_SESSION_DIR=auth_info_baileys
BAILEYS_BROWSER="TypeBot WhatsApp Client"
BAILEYS_PRINT_QR=true
BAILEYS_MARK_ONLINE=false
BAILEYS_SYNC_HISTORY=false

# Server port
PORT=3000

# WhatsApp reaction emojis (optional)
QUEUED_REACTION="üîÅ"
WORKING_REACTION="‚öôÔ∏è"
DONE_REACTION="‚úÖ"
ERROR_REACTION="‚ö†Ô∏è"

# Logging level (optional: fatal, error, warn, info, debug, trace)
LOG_LEVEL=info

# Audio Transcription Settings
TRANSCRIPTION_ENABLED=false # Enable or disable audio transcription
TRANSCRIPTION_TYPE=groq # Options: groq, local
TRANSCRIPTION_LANGUAGE=pt # Language code for transcription
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=whisper-large-v3 # Groq Whisper model

# Bot Language Settings
BOT_LANGUAGE=pt # Options: en, pt

# Whitelist Settings
WHITELIST_ENABLED=false # Set to true to enable whitelist
WHITELIST_ADMINS=5511999999999,5511888888888,5511777777777 # Comma-separated list of admin phone numbers (with country code, no + or spaces)