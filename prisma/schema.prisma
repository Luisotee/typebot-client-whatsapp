generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                       Int       @id @default(autoincrement())
  waId                     String    @unique
  name                     String?
  activeTypebotSlug        String?   // Current active typebot slug for this user
  activeSessionId          String?   // Current active session ID
  lastRejectionNotifiedAt  DateTime? // Track when user was last notified of rejection
  createdAt                DateTime  @default(now())
  updatedAt                DateTime  @updatedAt
  messages                 Message[]
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  direction String   // 'in' or 'out'
  timestamp DateTime @default(now())
  sessionId String?

  // Foreign key to User
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, timestamp])
}

model WhitelistedUser {
  id        Int      @id @default(autoincrement())
  waId      String   @unique
  addedBy   String   // waId of the admin who added this user
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([waId])
}

// Persisted active choices for audio matching (survives server restart)
model ActiveChoice {
  id          Int      @id @default(autoincrement())
  waId        String   @unique
  sessionId   String
  choices     String   // JSON stringified array of {id, content}
  typebotSlug String?
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  @@index([expiresAt])
}

// Persisted expected input types for audio handling (survives server restart)
model ExpectedInputType {
  id        Int      @id @default(autoincrement())
  waId      String   @unique
  inputType String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([expiresAt])
}